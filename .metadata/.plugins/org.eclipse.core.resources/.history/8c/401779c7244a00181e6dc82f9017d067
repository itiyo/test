package demos;

public class Comp {
	
	String ssn;
	String name;
	String email;
	String phone;
	double deposit = 0;
	double balance = 0;


	// build a constructor

	Comp(){
		System.out.println("New User account has been created!");
	}
	
	Comp(String dept){
		System.out.println("New User account has been created in the " + dept + " department");
	}
	
	Comp(String name, double deposit){
		
		if (deposit < 1000) {
			System.out.println("Deposit must exceed £3000");
		}
		else {
			System.out.println("Thank you Mr " + name + " for your £" + deposit + " deposit");
			
		}
	}
	
	
	 

	

	void work() {
		System.out.println(name + " is working with this \nemail: " + email);
	}
	void eat() {
		System.out.println(name + " is eating!!");
	}
	void meet() {
		System.out.println(name + " is in a meeting!!");
	}
	void checkbal() {
		balance += deposit;
		System.out.println("Your current balance is £ " + balance );
	}

}
